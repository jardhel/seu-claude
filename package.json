{
  "name": "seu-claude",
  "version": "0.1.0",
  "description": "Local Codebase RAG MCP Server for Claude Code - Proactive semantic indexing with AST-based chunking",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "seu-claude": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "benchmark": "npx tsx benchmarks/performance.ts",
    "download-grammars": "npx tsx scripts/download-grammars.ts",
    "postinstall": "npm run download-grammars || true",
    "prepare": "npm run build",
    "evidence": "./scripts/collect-evidence.sh"
  },
  "keywords": [
    "claude",
    "mcp",
    "rag",
    "codebase",
    "semantic-search",
    "ast",
    "tree-sitter",
    "vector-database",
    "local-llm"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jardhel/seu-claude.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@anthropic-ai/tokenizer": "^0.0.4",
    "@huggingface/transformers": "^3.0.0",
    "@lancedb/lancedb": "^0.5.0",
    "web-tree-sitter": "^0.22.0",
    "fast-glob": "^3.3.2",
    "ignore": "^5.3.0",
    "xxhash-wasm": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.7.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  }
}
